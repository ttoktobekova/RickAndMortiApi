<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.example.rickandmortiapi.UI.fragments.ListFragment"
        android:label="@string/fragment_list"
        tools:layout="@layout/fragment_list">
        <action
            android:id="@+id/action_listFragment_to_filterFragment"
            app:destination="@id/filterFragment" />
        <action
            android:id="@+id/action_listFragment_to_detailFragment"
            app:destination="@id/detailFragment" />

    </fragment>

    <dialog
        android:id="@+id/filterFragment"
        android:name="com.example.rickandmortiapi.UI.fragments.FilterFragment"
        android:label=""
        tools:layout="@layout/fragment_filter" />
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.rickandmortiapi.UI.fragments.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" >
        <argument
            android:name="character"
            app:argType="com.example.rickandmortiapi.model.Character" />
    </fragment>

</navigation>